#!/usr/bin/env bash
set -euo pipefail
IFS=$' \t\n'

# ---------------- LIVE HOSTS (dnsx) ----------------
COLLECT_LIVE(){
  ALL_SUBS_FILE="$COLLECTED_DIR/all_subdomains.out"
  RESOLVED_OUT="$COLLECTED_DIR/puredns_resolved.out"
  if [[ ! -s "$ALL_SUBS_FILE" ]]; then
    ERR "No subdomains found to resolve"
    return
  fi
  START_SPINNER "Running PureDNS for Resolving live hosts"
  "$BIN_DIR/puredns" resolve "$ALL_SUBS_FILE" -b "$BIN_DIR/massdns" -r "$WORDLISTS_DIR/resolvers.txt" -w "$RESOLVED_OUT" --skip-wildcard-filter -q >/dev/null || true
  LIVE_COUNT=$(wc -l < "$RESOLVED_OUT" | tr -d ' ')
  STOP_SPINNER
  OK "PureDNS Resolved live hosts: $LIVE_COUNT"
  INFO "Resolved live hosts -> $RESOLVED_OUT"
}